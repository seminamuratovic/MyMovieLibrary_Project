@model IEnumerable<Implementacija.Models.Kolekcija>

@{
    ViewData["Title"] = "SaveMovieToCollection";
}


@if (User.Identity.IsAuthenticated)
 {


<style>
    body {
        color: snow;
        background-image: url("https://i.ibb.co/dGmJRcn/Pocetna-Stranica.png");
        height: 30%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
    .User{
        width:100%;
        margin-bottom:5%;
    }
    .Lista {
        background-color: rgb(0, 0, 0,0.7);
        width:60%;     
    }
    .Create{
        float:right;
        width:10%;   
        margin-top:10%;
    }
    .Lista li:hover{
        background-color: rgb(255, 255, 255,0.5);       
    }
   
   
</style>

<div class="User">
    <center>
        <img style="height:5em" src="https://i.ibb.co/NyzBBdb/icons8-user-64.png" /><br />
        <p style="color:white;margin-left:10px;font-size:30px;margin-top:10px;font-weight:bold">@User.Identity.Name</p>
        <p style="color:white;margin-left:10px;font-size:25px;margin-top:10px">Your Collections</p>
    </center>
</div>
<div class="Lista">
    <div>
@foreach (var item in Model) {
        <ul>
            <li style="font-size:30px">
                @Html.DisplayFor(modelItem => item.Naziv)
                <a href="/saveMovie/@ViewBag.filmId/@item.Id"
                style="float:right;margin-right:5px;color:yellow;font-size:20px">Save
                </a>
            </li>
        </ul>
}
</div>
</div>




}
