@model IEnumerable<Implementacija.Models.Kolekcija>

@{
    ViewData["Title"] = "Index";
}

@if (User.Identity.IsAuthenticated)
 {


<style>
    body {
        color: snow;
        background-image: url("https://i.ibb.co/dGmJRcn/Pocetna-Stranica.png");
        height: 30%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
    .User{
        width:100%;
        margin-bottom:5%;
    }
    .Lista {
        background-color: rgb(0, 0, 0,0.7);
        width:60%;     
    }
    .Create{
        float:right;
        width:10%;   
        margin-top:10%;
        margin-top:-8px;
    }
    .Lista li:hover{
        background-color: rgb(255, 255, 255,0.5);       
    } 
</style>

<div>
     <a sp-area="" asp-controller="Home" asp-action="Index">
    <img style="height:6em" src="https://i.ibb.co/n0bPk5B/logo-movie-removebg-preview.png" /><br />
    </a>
</div>

<div class="User">
    <center>
        <img style="height:5em" src="https://i.ibb.co/NyzBBdb/icons8-user-64.png" /><br />
        <p style="color:white;margin-left:10px;font-size:30px;margin-top:10px;font-weight:bold">@User.Identity.Name</p>
        <p style="color:white;margin-left:10px;font-size:25px;margin-top:10px">Your Collections</p>
    </center>
</div>
<div class="Create">
    <img style="height:5em" src="https://i.ibb.co/R3PTx6b/icons8-add-new-64.png" />
    <a asp-controller="Kolekcija" asp-action="Create" style="font-size:25px;margin-left:5px;color:white">Create</a>
</div>

<div class="Lista">

@foreach (var item in Model) {
        <ul>
            
            <li style="font-size:30px">
               <a href="/filmovi/@item.Id"> @Html.DisplayFor(modelItem => item.Naziv) </a>

                <a asp-action="Delete" asp-route-id="@item.Id" 
                style="float:right;margin-right:12px;color:rgb(143, 0, 0);font-size:20px">Delete</a>
            </li>
       
        </ul>
}
</div>

}
